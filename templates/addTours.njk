{% extends "base.njk" %}

{% block metaStuff %}
<title>Add Tours</title>
{% endblock %}

{% block main %}
<h1>Add Tours</h1>
<h2>Tour Creation</h2>

<form action="addedTour" method="POST">
	<fieldset class="user_info">
		<legend>Tour Information</legend>
		
		<section class="container">
		<label>
			Tour Name:
			<input type="text", id="tour_name", name="tourName", value="">
		</label>
		<label>
			Tour Date:
			<input type="text", id="tour_date", name="tourDate", value="">
		</label>
		<button type="submit">Submit</button>
		</section>
	</fieldset>
</form>
{% endblock %}